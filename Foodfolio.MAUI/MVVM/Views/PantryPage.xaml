<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Foodfolio.MAUI.MVVM.Views.PantryPage" 
             Title="Pantry">

    <AbsoluteLayout>

        <!-- Scrollbarer Hauptinhalt -->
        <ScrollView>
            <VerticalStackLayout Margin ="25,28,1,1" Padding="20">
                <Frame
                Margin="-17,5,0,5"
                Padding="10"
                BackgroundColor="#FFFFFF"
                CornerRadius="10"
                HasShadow="True">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnItemTapped"/>
                    </Frame.GestureRecognizers>

                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">

                        <!-- Icon -->
                        <Image
                                Source="paprika.jpg"
                                WidthRequest="60"
                                Aspect="AspectFill"
                                HeightRequest="60"
                                VerticalOptions="Center"
                                HorizontalOptions="Center"
                            />
                        
                        <!--Name & Kategorien-->
                        <VerticalStackLayout HeightRequest="80" WidthRequest="130" VerticalOptions="Start">
                            <Label
                                Text="Bell Pepper"
                                FontSize="15"
                                FontAttributes="Bold"
                                Margin="0,4,0,0"
                            />
                        </VerticalStackLayout>

                        <Grid ColumnDefinitions="50,42"  RowDefinitions="17,17,17,17" Margin="0,5,0,0"  WidthRequest="112">
                            <Label
                                Text="Calories"
                                FontSize="12"
                                Grid.Column="0"
                                Grid.Row="0"
                                HorizontalTextAlignment="Start"
                                />

                            <Label
                                Text="23390"
                                FontSize="12"
                                Grid.Column="1"
                                Grid.Row="0"
                                HorizontalTextAlignment="End"
                                />

                            <Label
                                Text="Protein"
                                FontSize="12"
                                Grid.Column="0"
                                Grid.Row="1"
                                HorizontalTextAlignment="Start"
                                />

                            <Label
                                Text="1,3"
                                FontSize="12"
                                Grid.Column="1"
                                Grid.Row="1"
                                HorizontalTextAlignment="End"
                                />

                            <Label
                                Text="Carbs"
                                FontSize="12"
                                Grid.Column="0"
                                Grid.Row="2"
                                HorizontalTextAlignment="Start"
                                />

                            <Label
                                Text="6,4"
                                FontSize="12"
                                Grid.Column="1"
                                Grid.Row="2"
                                HorizontalTextAlignment="End"
                                />

                            <Label
                                Text="Fats"
                                FontSize="12"
                                Grid.Column="0"
                                Grid.Row="3"
                                HorizontalTextAlignment="Start"
                                />

                            <Label
                                Text="0,5"
                                FontSize="12"
                                Grid.Column="1"
                                Grid.Row="3"
                                HorizontalTextAlignment="End"
                                />
                        </Grid>

                    </HorizontalStackLayout>

                </Frame>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Suchleiste -->
        <Frame
            AbsoluteLayout.LayoutFlags="PositionProportional"
            AbsoluteLayout.LayoutBounds="0.35,0,270,35" 
            Padding="-3"
            BackgroundColor="#F0F0F0"
            CornerRadius="7"
            HasShadow="True">

            <SearchBar
                Placeholder="Search"/>
        </Frame>

        <!-- Filter-Button -->
        <Frame
            AbsoluteLayout.LayoutFlags="PositionProportional"
            AbsoluteLayout.LayoutBounds="0.88,0,35,35"  
            Padding="0"
            CornerRadius="17"
            BackgroundColor="#F0F0F0"
            HasShadow="False">

            <ImageButton
            WidthRequest="20"
            HeightRequest="20"
            BackgroundColor="#F0F0F0"
            Source="icon_filter.svg"
            Aspect="AspectFit"
            Clicked="FilterButton_Clicked"/>
        </Frame>

        <!-- Floating Action Button unten rechts -->
        <Frame
            AbsoluteLayout.LayoutFlags="PositionProportional"
            AbsoluteLayout.LayoutBounds="0.9,0.96,85,85"  
            Padding="0"
            BackgroundColor="#F0F0F0"
            CornerRadius="45"
            HasShadow="True">

            <Button
                WidthRequest="85"
                HeightRequest="85"
                CornerRadius="45"
                BackgroundColor="{StaticResource  MainColor}"
                ImageSource="icon_additem.svg"
                Clicked="AddItemButton_Clicked"/>
        </Frame>

    </AbsoluteLayout>
</ContentPage>
