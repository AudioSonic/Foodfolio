<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Foodfolio.MAUI.MVVM.ViewModels"
             x:Class="Foodfolio.MAUI.MVVM.Views.AddCategoryPage"
             Title="Neue Kategorie">

    <VerticalStackLayout Margin="20,0,20,0" Padding="20" Spacing="15">
        <BoxView 
            BackgroundColor="{Binding ColorHex}"
            WidthRequest="50"
            HeightRequest="50"
            CornerRadius="45"
            Margin="0,0,0,20"/>

        <Label Text="Category name:" />
        <Entry Placeholder="e.g. italian" Text="{Binding Name}" />

        <Grid ColumnDefinitions="Auto,Auto">
            <Button 
                Text="Pick Icon" 
                BackgroundColor="LightGrey" 
                WidthRequest="160" 
                HeightRequest="40"
                Grid.Column="0"
                Margin="0,0,5,0"
                Command="{Binding PickIconPopupCommand}"/>

            <Button Text="Pick Color" 
                BackgroundColor="LightGrey" 
                WidthRequest="160" 
                HeightRequest="40"
                Grid.Column="1"
                Margin="5,0,0,0"
                    Command="{Binding PickColorPopupCommand}"/>
        </Grid>

        <Button Text="Save Category"
                Command="{Binding SaveCategoryCommand}"
                BackgroundColor="{StaticResource MainColor}"
                TextColor="White" 
                Margin="0,50,0,0"/>

        <Button Text="Return"
                Command="{Binding CancelCommand}"
                BackgroundColor="Gray"
                TextColor="White" />
    </VerticalStackLayout>
</ContentPage>
