<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Foodfolio.MVVM.ViewModels"
             x:Class="Foodfolio.MVVM.Views.CategoriesPage"
             Title="Kategorien">

    <ContentPage.BindingContext>
        <vm:CategoriesViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="10">

        <!-- Button zum HinzufÃ¼gen neuer Kategorien -->
        <Button Text="Neue Kategorie hinzufÃ¼gen"
                Command="{Binding AddCategoryCommand}"
                BackgroundColor="LimeGreen"
                TextColor="White"
                Margin="0,0,0,10" />

        <CollectionView ItemsSource="{Binding AllCategories}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="5" Spacing="10">
                        <Label Text="{Binding Name}" VerticalOptions="Center" WidthRequest="150" />
                        <BoxView Color="{Binding ColorHex}" WidthRequest="30" HeightRequest="30" CornerRadius="5" />

                        <Button Text="âœŽ"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CategoriesViewModel}}, Path=EditCategoryCommand}"
                                CommandParameter="{Binding}" WidthRequest="40" />

                        <Button Text="â§‰"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CategoriesViewModel}}, Path=CopyCategoryCommand}"
                                CommandParameter="{Binding}" WidthRequest="40" />

                        <Button Text="ðŸ—‘"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CategoriesViewModel}}, Path=DeleteCategoryCommand}"
                                CommandParameter="{Binding}" WidthRequest="40" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
